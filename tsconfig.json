{
  "extends": "./node_modules/@itwin/build-tools/tsconfig-base.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true
  },
  "typedocOptions": {
    "name": "property-validation-client",
    "entryPoints": ["src/property-validation-client.ts"],
    "out": "docs",
    "theme": "markdown",
    "excludePrivate": true,
    "excludeProtected": true,
    "excludeExternals": true,
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "lib",
    "node_modules"
  ]
}